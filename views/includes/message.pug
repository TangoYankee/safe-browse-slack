div(class="message")
    if message
        - var display_text;
        - var alert_class;
        if message == "success"
            - display_text = "installation succeeded";
            - alert_class = "success";
        else if message == "error"
            - display_text = "an error occurred"
            - alert_class = "error"
        else if message == "page-not-found"
            - display_text = "error 404: page not found"
            - alert_class = "error"
        else
            - display_text = "input not recognized"
            - alert_class = "warning"
        div(class = `alert ${alert_class}`) #{display_text}
            span(class = "closebtn") 
                a(title = "close message" href = process.env.SB_DIRECT_URI+"/") &times;
